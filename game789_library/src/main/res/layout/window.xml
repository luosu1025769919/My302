<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uk_toast_plug_qqweixin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/luosu_shape_white_8"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="240.0dip"
        android:layout_height="240.0dip"
        android:background="@drawable/luosu_shape_white_8"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/window_title"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"

            android:padding="6dp"
            android:text=""
            android:textColor="@color/luosu_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/window_msg"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="6dp"
            android:text=""
            android:textColor="@color/luosu_gray"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"

            android:gravity="center_vertical">

            <Button
                android:id="@+id/window_false"
                android:layout_width="68.0dip"
                android:layout_height="32.0dip"
                android:layout_alignParentLeft="true"
                android:background="@color/luosu_white"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/luosu_gray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/window_true"
                android:layout_width="68.0dip"
                android:layout_height="32.0dip"
                android:layout_alignParentRight="true"
                android:background="@color/luosu_white"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/luosu_gray"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>